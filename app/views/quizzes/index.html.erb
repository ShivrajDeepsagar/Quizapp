<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <% @quizzes.each do |quiz| %>
        <h2 class="card-title"><%= link_to quiz.title, quiz %></h2>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
        <%= link_to 'Edit', edit_quiz_path(quiz), class: "btn btn-default" if current_user && current_user.admin? %>
        <%= link_to 'Destroy', quiz, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } if current_user && current_user.admin? %>
        <%= link_to 'Add question', new_quiz_question_path(quiz), class: "btn btn-default" if current_user && current_user.admin? %>
        <%= link_to 'Take the quiz', new_quiz_reply_path(quiz), class: "btn btn-primary" %>
        <%end%>
      </div>
    </div>
  </div>
</div>



